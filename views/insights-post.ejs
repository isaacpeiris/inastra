<% include ./partials/head %>

<link rel="stylesheet" href="/stylesheets/insights.css">
<script src="/javascripts/insights.js"></script>

<% include ./partials/head-bottom %>
<% include ./components/nav %>
<main id="post">
    <section id="hero">
        <div class="hero-content eos-container">
            <h1 class="post__title"><%= post.title %></h1>
            <div class="post__header">
                <p class="post__author"><%= post.author %></p><p class="post__date"><%= post.date %> </p>
            </div>
        </div>
    </section>
    <section id="content">
        <div class="eos-container">
            <div class="post__content">
                <%- post.content %>
            </div>
            <div class="post__details">
                <div class="post__tags">
                    <% post.categories.forEach(tag => { %>
                    <span class="eos-tag"><%= tag %></span>
                    <% }) %>
                </div>
            </div>
        </div>
    </section>
</main>

<div id="particle-js"></div>

<% include ./components/footer %>