{
  "name": "inastra",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "NODE_ENV=production node ./bin/www",
    "dev": "npm run dev:node & npm run dev:scss",
    "dev:node": "NODE_ENV=development nodemon ./bin/www",
		"dev:scss": "node-sass -w scss -o public/stylesheets --output-style expanded",
		"lint:scss": "npx stylelint \"**/*.scss\" --fix",
		"lint:css": "npx stylelint \"**/*.css\" --fix",
    "deploy": "gcloud config configurations activate default && gcloud app deploy --project inastra-website --quiet"
  },
  "dependencies": {
    "axios": "^0.23.0",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "ejs": "~2.6.1",
    "express": "~4.16.1",
    "express-enforces-ssl": "^1.1.0",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "node-sass": "^6.0.1",
    "nodemon": "^2.0.14",
		"postcss": "^8.3.11",
		"postcss-scss": "^4.0.2",
		"stylelint": "^14.0.1",
		"stylelint-order": "^5.0.0",
		"stylelint-scss": "^4.0.0"
  }
}